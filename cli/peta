#!/bin/bash

# Peta CLI Tool
# This script provides a command-line interface for the Peta static website engine

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored output
print_error() {
    echo -e "${RED}Error: $1${NC}" >&2
}

print_success() {
    echo -e "${GREEN}$1${NC}"
}

print_info() {
    echo -e "${YELLOW}$1${NC}"
}

# Function to show help
show_help() {
    cat << EOF
Peta - Static Website Engine CLI

Usage:
    peta <command> [options]

Commands:
    init site <path>         Initialize a new Peta site
    init <type> "<title>"    Create a new content file
    dev                      Start development server
    build                    Build for production
    test                     Run all tests
    help                     Show this help message

Content Types:
    article                  Create a new article
    snippet                  Create a new snippet
    project                  Create a new project

Examples:
    peta init site /path/to/my-site
    peta init site ./my-blog
    peta init article "My First Article"
    peta init snippet "Useful Code Snippet"
    peta init project "My Awesome Project"
    peta dev
    peta build
    peta test

EOF
}

# Function to initialize a new site
init_site() {
    local site_path="$1"
    
    if [ -z "$site_path" ]; then
        print_error "Site path is required"
        print_info "Usage: peta init site <path>"
        exit 1
    fi
    
    # Convert to absolute path
    if [[ "$site_path" != /* ]]; then
        site_path="$(pwd)/$site_path"
    fi
    
    # Check if directory already exists
    if [ -d "$site_path" ]; then
        print_error "Directory already exists: $site_path"
        exit 1
    fi
    
    print_info "Creating new Peta site at: $site_path"
    
    # Create the site directory
    mkdir -p "$site_path"
    
    # Copy directories from current project
    print_info "Copying _content directory..."
    cp -r "$PROJECT_ROOT/_content" "$site_path/"
    
    print_info "Copying cli directory..."
    cp -r "$PROJECT_ROOT/cli" "$site_path/"
    
    print_info "Copying peta directory..."
    cp -r "$PROJECT_ROOT/peta" "$site_path/"
    
    # Copy other necessary files
    if [ -f "$PROJECT_ROOT/LICENSE" ]; then
        cp "$PROJECT_ROOT/LICENSE" "$site_path/"
    fi
    
    if [ -f "$PROJECT_ROOT/README.rst" ]; then
        cp "$PROJECT_ROOT/README.rst" "$site_path/"
    fi
    
    if [ -f "$PROJECT_ROOT/.gitignore" ]; then
        cp "$PROJECT_ROOT/.gitignore" "$site_path/"
    fi
    
    # Make the peta CLI executable
    chmod +x "$site_path/cli/peta"
    
    # Change to the new site directory and install dependencies
    print_info "Installing dependencies..."
    cd "$site_path/peta"
    npm install
    
    print_success "Site initialized successfully!"
    print_info ""
    print_info "Next steps:"
    print_info "  cd $site_path"
    print_info "  ./cli/peta dev"
    print_info ""
    print_info "Your new site is ready to use!"
}

# Function to initialize content
init_content() {
    local type="$1"
    local title="$2"
    
    if [ "$type" = "site" ]; then
        init_site "$2"
        return
    fi
    
    if [ -z "$type" ] || [ -z "$title" ]; then
        print_error "Both type and title are required"
        print_info "Usage: peta init <type> \"<title>\""
        exit 1
    fi
    
    # Check if we're in the right directory
    if [ ! -d "$PROJECT_ROOT/_content" ]; then
        print_error "Content directory not found. Make sure you're in the Peta project root."
        exit 1
    fi
    
    # Run the init script
    node "$SCRIPT_DIR/init.js" "$type" "$title"
}

# Function to start dev server
start_dev() {
    cd "$PROJECT_ROOT/peta"
    if [ -f "package.json" ]; then
        print_info "Processing content..."
        if ! node scripts/process-content.js; then
            print_error "Content processing failed"
            exit 1
        fi
        print_info "Content processed successfully!"
        print_info "Starting development server..."
        print_info "Server will be available at http://localhost:3000"
        npm run dev
    else
        print_error "package.json not found in peta directory"
        exit 1
    fi
}

# Function to build
build_site() {
    cd "$PROJECT_ROOT/peta"
    if [ -f "package.json" ]; then
        print_info "Building site..."
        npm run build && npm run export
        print_success "Build completed! Static files are in peta/out/"
    else
        print_error "package.json not found in peta directory"
        exit 1
    fi
}

# Function to run tests
run_tests() {
    cd "$PROJECT_ROOT/tests"
    if [ -f "package.json" ]; then
        print_info "Installing test dependencies..."
        npm install > /dev/null 2>&1
        
        print_info "Running tests..."
        npm test
        
        if [ $? -eq 0 ]; then
            print_success "All tests passed!"
        else
            print_error "Some tests failed"
            exit 1
        fi
    else
        print_error "Test configuration not found. Make sure tests/ directory exists with package.json"
        exit 1
    fi
}

# Main script logic
case "${1:-help}" in
    init)
        if [ "$2" = "site" ]; then
            init_site "$3"
        else
            init_content "$2" "$3"
        fi
        ;;
    dev)
        start_dev
        ;;
    build)
        build_site
        ;;
    test)
        run_tests
        ;;
    help|--help|-h)
        show_help
        ;;
    *)
        print_error "Unknown command: $1"
        print_info "Run 'peta help' for usage information"
        exit 1
        ;;
esac