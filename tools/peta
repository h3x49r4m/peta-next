#!/bin/bash

# Peta CLI Tool
# This script provides a command-line interface for the Peta static website engine

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored output
print_error() {
    echo -e "${RED}Error: $1${NC}" >&2
}

print_success() {
    echo -e "${GREEN}$1${NC}"
}

print_info() {
    echo -e "${YELLOW}$1${NC}"
}

# Function to show help
show_help() {
    cat << EOF
Peta - Static Website Engine CLI

Usage:
    peta <command> [options]

Commands:
    init <type> "<title>"    Create a new content file
    dev                      Start development server
    build                    Build for production
    help                     Show this help message

Content Types:
    article                  Create a new article
    snippet                  Create a new snippet
    project                  Create a new project

Examples:
    peta init article "My First Article"
    peta init snippet "Useful Code Snippet"
    peta init project "My Awesome Project"
    peta dev
    peta build

EOF
}

# Function to initialize content
init_content() {
    local type="$1"
    local title="$2"
    
    if [ -z "$type" ] || [ -z "$title" ]; then
        print_error "Both type and title are required"
        print_info "Usage: peta init <type> \"<title>\""
        exit 1
    fi
    
    # Check if we're in the right directory
    if [ ! -d "$PROJECT_ROOT/_content" ]; then
        print_error "Content directory not found. Make sure you're in the Peta project root."
        exit 1
    fi
    
    # Run the init script
    node "$SCRIPT_DIR/init.js" "$type" "$title"
}

# Function to start dev server
start_dev() {
    cd "$PROJECT_ROOT/peta"
    if [ -f "package.json" ]; then
        print_info "Starting development server..."
        npm run dev
    else
        print_error "package.json not found in peta directory"
        exit 1
    fi
}

# Function to build
build_site() {
    cd "$PROJECT_ROOT/peta"
    if [ -f "package.json" ]; then
        print_info "Building site..."
        npm run build && npm run export
        print_success "Build completed! Static files are in peta/out/"
    else
        print_error "package.json not found in peta directory"
        exit 1
    fi
}

# Main script logic
case "${1:-help}" in
    init)
        init_content "$2" "$3"
        ;;
    dev)
        start_dev
        ;;
    build)
        build_site
        ;;
    help|--help|-h)
        show_help
        ;;
    *)
        print_error "Unknown command: $1"
        print_info "Run 'peta help' for usage information"
        exit 1
        ;;
esac